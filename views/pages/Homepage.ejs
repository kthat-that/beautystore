      <section>
        <h2 class="section-title">New Product</h2>
        <div class="container">
          <div class="row">
            <% products.forEach(product => { %>
              <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-6 product-card">
                <div class="product-img">
                  <img src="/upload/<%= product.img %>" alt="<%= product.ProductName %>" />
                </div>
                <div class="product-name">
                  <h3><%= product.ProductName %></h3>
                  <h4>$<%= product.Price %></h4>
                </div>
                <div class="product-description">
                  <h4><%= product.Description %></h4>
                </div>
                <a href="/details/<%= product.ProductID %>">
                  <button type="button" class="btnCart">Add to Cart</button>
                </a>
                <button type="button" class="btnBuy">Buy Now</button>
              </div>
            <% }); %>

           
          </div>
        </div>
      </section>

      <section>
        <h2 class="section-title">New Arrivals</h2>
        <div class="container">
          <div class="row">
            
           <% if (newproducts && newproducts.length > 0) { %>
              <% newproducts.forEach(newproduct => { %>
                <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-6 product-card">
                  <div class="product-img">
                    <img src="/upload/<%= newproduct.img %>" alt="<%= newproduct.name %>" />
                  </div>
                  <div class="product-name">
                    <h3><%= newproduct.name %></h>
                    <h4>$<%= newproduct.price %></h4>
                  </div>
                  <div class="product-description ">
                    <h4><%= newproduct.des %></h4>
                  </div>
                 <a href="/newdetails/<%= newproduct.id %>">
                    <button type="button" class="btnCart">Add to Cart</button>
                  </a>
                  
                </div>
              <% }); %>
            <% } else { %>
              <p>No products found.</p>
            <% } %>


          

        </div>
      </section>
