                <h2 class="text-danger  ">Welcome to Our Product's Brands</h2>
                <p class="fs-4  ">Shopping with Beauty-Store, discover skincare that brings out your natural beauty — gentle, clean, and effective.</p>
                <a href="#" class="">
                  <button class="btn btn-primary p-1 px-2">See More</button>
                </a>
              </div>
            </div>
          </div>
            
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container">
        <div class="row">
          <div
            class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 recommand-pro"
          >
            <h2>Recommand Products</h2>
            <div
              class="col-xxl-6 col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 btn-Product" id="brands"
            >
              <a class="btn btn-danger" id="auna" href="/Auna" role="button">Auna</a>
              <a class="btn btn-danger" id="phka" href="/Phka" role="button">Phka</a>
             
              <a class="btn btn-danger" id="skin1004" href="/Skin1004" role="button">Skin1004</a>
              <a class="btn btn-danger" id="3ce" href="/3CE" role="button">3CE</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container">
        <div class="row">
          <% products.forEach((product, index) => { %>
            <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-6 product-card <% if (index >= 15) { %> d-none more-product <% } %>">
              <div class="product-img">
                <img src="/upload/<%= product.img %>" alt="<%= product.ProductName %>" />
              </div>
              <div class="product-name">
                <h3><%= product.ProductName %></h3>
                <h4>$<%= product.Price %></h4>
              </div>
              <div class="product-description">
                <h4><%= product.Description %></h4>
              </div>
              <a href="/details/<%= product.ProductID %>"> 
                <button type="button" class="btnCart">View Detail</button>
              </a>
              <button type="button" class="btnBuy">Buy Now</button>
            </div>
          <% }); %>

            <div class="text-center mt-4">
              <button id="toggleProductBtn" class="btn btn-outline-primary">See More</button>

            </div>
          

      </div>
    </section>

    <footer class="footer">
      <div class="footer-container">
        <div class="footer-section">
          <h3>Open Skincare</h3>
          <p>
            We believe skincare should be accessible to all.<br />
            Explore our range of open-source formulas and<br />
            educational content that empowers you to<br />
            understand and personalize your skincare journey.
          </p>
